generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model rules {
  id           String   @id @default(uuid())
  name         String
  searchFilter String
  type         String
  value        String
  createdAt    DateTime @default(now())
}

model test_dataset {
  id BigInt @id @default(autoincrement())
  session_start_ts DateTime @default(now())
  dataset_name String
  dataset_dataspace String
  tested_records Int @default(0)
  dataset_img_url String
  errors String @default("")

  @@unique([dataset_name, dataset_dataspace])
}

model test_dataset_check {
  id             BigInt   @id @default(autoincrement())
  session_start_ts DateTime @default(now())
  dataset_name     String
  check_name       String
  used_key         String

  @@map("test_dataset_check")
}

model test_dataset_record_check_failed {
  id                        BigInt   @id @default(autoincrement())
  session_start_ts          DateTime @default(now())
  dataset_name              String
  record_jsonpath           String
  check_name                String
  record_json               String
  impacted_attributes_csv   String
  check_category            String
  problem_hint              String
  used_key                  String

  @@map("test_dataset_record_check_failed")
}